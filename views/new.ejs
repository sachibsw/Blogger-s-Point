<% include ./partials/header %>
<div style="margin-top:4.0em !important">
<div class="ui main text container segment">
 <div class="ui huge header">New Blog</div>
<form class="ui form" action="/blogs" method="Post">
  <div class="field">
    <label>TITLE</label>
    <input name="blog[title]" placeholder="enter title" type="text">
  </div>
  <div class="field">
    <label>Image</label>
    <input name="blog[image]" placeholder="image url" type="text">
  </div>
  <div class="field">
      <label>Blog</label>
      <textarea name="blog[body]" placeholder="Type your own blog" ></textarea>
  </div>
  <div class="field">
    <label>Author</label>
    <input name="blog[author]" placeholder="author" value="<%=cUser.username%>" type="text" readonly>
  </div>
  <div class="field">
    <label>Category</label>
    <input name="blog[category]" placeholder="Enter category" type="text">
  </div>
  <div class="field">
  <button class="ui green inverted button" type="submit">Submit</button>  
  </div>
  <div style="padding-bottom:20px"></div>
  
</form>
 </div>
 </div>
<% include ./partials/footer %>